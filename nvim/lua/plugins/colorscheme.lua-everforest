-- colorscheme.lua

return {
  -- tokyonight-theme
  {
    "sainnhe/everforest",
    lazy = false,
    priority = 1000,
    config = function()
      vim.cmd[[colorscheme everforest]]
      vim.g.everforest_background = "hard"
    end,
  },

  -- nvim-autopairs
  {
    "windwp/nvim-autopairs",
    config = function()
      require("nvim-autopairs").setup {
        check_ts = true,
      }
    end
  }
}


